  },
  "definitions": {
    "standards": [
      {
        "bom-ref": "adbom-v1.0.0",
        "name": "Hypermedia Security: ADBOM Specification",
        "version": "1.0.0",
        "description": "Arbitrary Risk Bill of Materials - Cryptographic attestation for arbitrary data blobs",
        "owner": "Hypermedia Au",
        "externalReferences": [
          {
            "type": "documentation",
            "url": "https://github.com/sec-hypermedia/adbom-spec"
          },
          {
            "type": "website",
            "url": "https://sec.hypermedia.au"
          }
        ],
        "requirements": [
          {
            "bom-ref": "adbom-hash-verification",
            "identifier": "ADBOM-001",
            "title": "Hash-Based Verification",
            "text": "ADBOM documents MUST contain cryptographic hashes of the data blob using SHA-256 and optionally SHA-512, SHA3-256, SHA3-512, or BLAKE3. Hash calculation MUST occur before signature generation.",
            "descriptions": [
              "Hash-based verification ensures data integrity without storing the actual data blob. Only hash values are included in the ADBOM, creating a privacy-preserving attestation model."
            ],
            "parent": "adbom-v1.0.0",
            "properties": [
              {
                "name": "requirement-uri",
                "value": "https://sec.hypermedia.au/standards/adbom/v1#adbom-hash-verification"
              },
              {
                "name": "validation-method",
                "value": "cryptographic-hash"
              },
              {
                "name": "required-algorithms",
                "value": "SHA-256"
              },
              {
                "name": "optional-algorithms",
                "value": "SHA-512,SHA3-256,SHA3-512,BLAKE3"
              }
            ]
          },
          {
            "bom-ref": "adbom-signature",
            "identifier": "ADBOM-002",
            "title": "Cryptographic Signature",
            "text": "ADBOM documents MUST be cryptographically signed using ES256, ES384, or ES512 algorithms. Keyless signing via Sigstore Fulcio is supported for ephemeral key scenarios.",
            "descriptions": [
              "Cryptographic signatures provide authenticity and non-repudiation. The signature covers the entire ADBOM document including hashes, metadata, and component information."
            ],
            "parent": "adbom-v1.0.0",
            "properties": [
              {
                "name": "requirement-uri",
                "value": "https://sec.hypermedia.au/standards/adbom/v1#adbom-signature"
              },
              {
                "name": "validation-method",
                "value": "cryptographic-signature"
              },
              {
                "name": "signature-algorithms",
                "value": "ES256,ES384,ES512"
              },
              {
                "name": "keyless-support",
                "value": "true"
              },
              {
                "name": "fulcio-integration",
                "value": "supported"
              }
            ]
          },
          {
            "bom-ref": "adbom-cyclonedx-compliance",
            "identifier": "ADBOM-003",
            "title": "CycloneDX 1.6/1.7 Compliance",
            "text": "ADBOM documents MUST conform to CycloneDX 1.6 or 1.7 specification with component type='data'. The document MUST include required fields: bomFormat, specVersion, serialNumber, version, metadata, components, and signature.",
            "descriptions": [
              "CycloneDX compliance ensures interoperability with existing BOM tooling and repositories. The 'data' component type is specifically designed for non-software artifacts."
            ],
            "parent": "adbom-v1.0.0",
            "properties": [
              {
                "name": "requirement-uri",
                "value": "https://sec.hypermedia.au/standards/adbom/v1#adbom-cyclonedx-compliance"
              },
              {
                "name": "validation-method",
                "value": "field-presence"
              },
              {
                "name": "required-fields",
                "value": "bomFormat,specVersion,serialNumber,version,metadata,components,signature"
              },
              {
                "name": "spec-versions",
                "value": "1.6,1.7"
              },
              {
                "name": "component-type",
                "value": "data"
              }
            ]
          },
          {
            "bom-ref": "adbom-metadata-requirements",
            "identifier": "ADBOM-004",
            "title": "Metadata Requirements",
            "text": "ADBOM metadata MUST include timestamp, tools array (generation tool), and MAY include authors and custom properties. Properties SHOULD use 'adbom:' namespace prefix.",
            "descriptions": [
              "Metadata provides context about ADBOM generation including when, by whom, and using what tools. Custom properties enable extensibility for domain-specific metadata."
            ],
            "parent": "adbom-v1.0.0",
            "properties": [
              {
                "name": "requirement-uri",
                "value": "https://sec.hypermedia.au/standards/adbom/v1#adbom-metadata-requirements"
              },
              {
                "name": "validation-method",
                "value": "field-presence"
              },
              {
                "name": "namespace-prefix",
                "value": "adbom:"
              },
              {
                "name": "required-fields",
                "value": "metadata.timestamp,metadata.tools"
              }
            ]
          }
        ],
        "properties": [
          {
            "name": "adbom:schema-url",
            "value": "https://sec.hypermedia.au/schemas/adbom/v1.0.0.schema.json"
          },
          {
            "name": "adbom:spec-version",
            "value": "1.0.0-poc"
          },
          {
            "name": "adbom:scope",
            "value": "text-data-blobs"
          },
          {
            "name": "adbom:fullname",
            "value": "Arbitrary Risk Bill of Materials"
          }
        ]
      }
    ]
  }
