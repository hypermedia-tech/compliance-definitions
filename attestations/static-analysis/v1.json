{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://sec.hypermedia.au/attestations/static-analysis/v1",
  "title": "Static Analysis Attestation",
  "description": "JSON Schema for static application security testing attestations in CycloneDX format",
  "type": "object",
  "required": ["bomFormat", "specVersion", "version", "declarations"],
  "properties": {
    "bomFormat": {
      "type": "string",
      "enum": ["CycloneDX"],
      "description": "Must be 'CycloneDX'"
    },
    "specVersion": {
      "type": "string",
      "pattern": "^1\\.[0-9]+$",
      "description": "CycloneDX specification version (e.g., '1.6')"
    },
    "serialNumber": {
      "type": "string",
      "pattern": "^urn:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique identifier for this attestation"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Version of this attestation document"
    },
    "declarations": {
      "type": "object",
      "required": ["assessors", "attestations", "claims"],
      "properties": {
        "assessors": {
          "type": "array",
          "minItems": 1,
          "description": "Entities that performed the assessment",
          "items": {
            "type": "object",
            "required": ["bom-ref", "component"],
            "properties": {
              "bom-ref": {
                "type": "string",
                "description": "Unique identifier for this assessor"
              },
              "component": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the assessment tool (e.g., 'CodeQL')"
                  },
                  "version": {
                    "type": "string",
                    "description": "Version of the assessment tool"
                  }
                }
              },
              "organization": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Organization providing the tool"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL of the organization"
                  }
                }
              },
              "thirdParty": {
                "type": "boolean",
                "description": "Whether this is a third-party assessor"
              }
            }
          }
        },
        "attestations": {
          "type": "array",
          "minItems": 1,
          "description": "Attestations linking claims to requirements",
          "items": {
            "type": "object",
            "required": ["assessor", "map"],
            "properties": {
              "assessor": {
                "type": "string",
                "description": "Reference to assessor bom-ref"
              },
              "summary": {
                "type": "string",
                "description": "Human-readable summary of the attestation"
              },
              "map": {
                "type": "array",
                "minItems": 1,
                "description": "Mappings between claims and requirements",
                "items": {
                  "type": "object",
                  "required": ["requirement", "claims", "conformance"],
                  "properties": {
                    "requirement": {
                      "type": "string",
                      "format": "uri",
                      "pattern": "^https://sec\\.hypermedia\\.au/standards/static-analysis/v1#",
                      "description": "URL pointing to the requirement (must be from static-analysis standard)"
                    },
                    "claims": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "description": "References to claim bom-refs"
                      }
                    },
                    "conformance": {
                      "type": "object",
                      "required": ["score"],
                      "properties": {
                        "score": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1,
                          "description": "Conformance score (0.0 = non-conformant, 1.0 = fully conformant)"
                        },
                        "rationale": {
                          "type": "string",
                          "description": "Explanation of the conformance score"
                        }
                      }
                    },
                    "confidence": {
                      "type": "object",
                      "required": ["score"],
                      "properties": {
                        "score": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1,
                          "description": "Confidence in the assessment (0.0 = no confidence, 1.0 = full confidence)"
                        },
                        "rationale": {
                          "type": "string",
                          "description": "Explanation of the confidence score"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "claims": {
          "type": "array",
          "minItems": 1,
          "description": "Security claims being made",
          "items": {
            "type": "object",
            "required": ["bom-ref", "target", "predicate"],
            "properties": {
              "bom-ref": {
                "type": "string",
                "description": "Unique identifier for this claim"
              },
              "target": {
                "type": "string",
                "description": "The artifact this claim is about (image digest or PURL)"
              },
              "predicate": {
                "type": "string",
                "enum": [
                  "passed-static-analysis"
                ],
                "description": "The security claim being made"
              },
              "rationale": {
                "type": "string",
                "description": "Justification for this claim"
              },
              "counterClaims": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "References to counter-claims"
                }
              },
              "mitigationStrategies": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "Mitigation strategies for any identified issues"
                }
              }
            }
          }
        }
      }
    }
  }
}