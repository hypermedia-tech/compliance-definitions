{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://sec.hypermedia.au/attestations/catalog-approval/v1",
  "title": "Catalog Approval Attestation",
  "description": "JSON Schema for human approval attestations",
  "type": "object",
  "required": ["bomFormat", "specVersion", "version", "declarations"],
  "properties": {
    "bomFormat": {
      "type": "string",
      "enum": ["CycloneDX"]
    },
    "specVersion": {
      "type": "string",
      "pattern": "^1\\.[0-9]+$"
    },
    "serialNumber": {
      "type": "string",
      "pattern": "^urn:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "properties": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "declarations": {
      "type": "object",
      "required": ["assessors", "attestations", "claims"],
      "properties": {
        "assessors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["bom-ref"],
            "properties": {
              "bom-ref": {
                "type": "string"
              },
              "component": {
                "type": "object",
                "required": ["name", "version"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the approval tool/system"
                  },
                  "version": {
                    "type": "string",
                    "description": "Version of the approval tool/system"
                  }
                }
              },
              "organization": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  }
                }
              },
              "thirdParty": {
                "type": "boolean"
              }
            }
          }
        },
        "attestations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["assessor", "map", "summary"],
            "properties": {
              "assessor": {
                "type": "string",
                "description": "Reference to assessor bom-ref"
              },
              "summary": {
                "type": "string"
              },
              "map": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["requirement", "claims", "conformance", "confidence"],
                  "properties": {
                    "requirement": {
                      "type": "string",
                      "description": "URI reference to requirement"
                    },
                    "claims": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "description": "Reference to claim bom-ref"
                      }
                    },
                    "conformance": {
                      "type": "object",
                      "required": ["score"],
                      "properties": {
                        "score": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1
                        },
                        "rationale": {
                          "type": "string"
                        }
                      }
                    },
                    "confidence": {
                      "type": "object",
                      "required": ["score"],
                      "properties": {
                        "score": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1
                        },
                        "rationale": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "claims": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["bom-ref", "target", "predicate"],
            "properties": {
              "bom-ref": {
                "type": "string"
              },
              "target": {
                "type": "string",
                "description": "OCI reference with digest"
              },
              "predicate": {
                "type": "string",
                "enum": [
                  "approved-for-secured",
                  "approval-recorded"
                ]
              },
              "rationale": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}