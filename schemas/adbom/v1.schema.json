{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sec.hypermedia.au/schemas/adbom/v1.0.0.schema.json",
  "title": "ADBOM v1.0.0 Schema",
  "description": "ADBOM schema for POC - text data blobs (JSON/YAML/XML) with hash-based verification and cryptographic signing",
  "version": "1.0.0-poc",
  "type": "object",
  "required": ["$schema", "bomFormat", "specVersion", "serialNumber", "version", "metadata", "components", "signature"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "bomFormat": {
      "type": "string",
      "const": "CycloneDX"
    },
    "specVersion": {
      "type": "string",
      "enum": ["1.6", "1.7"]
    },
    "serialNumber": {
      "type": "string",
      "pattern": "^urn:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique identifier (UUID URN format)"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "ADBOM document version"
    },
    "metadata": {
      "type": "object",
      "required": ["timestamp", "tools"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "vendor": { "type": "string" },
              "name": { "type": "string" },
              "version": { "type": "string" }
            }
          }
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" }
            }
          }
        },
        "properties": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" }
            }
          }
        }
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "description": "Single data component for POC",
      "items": {
        "type": "object",
        "required": ["bom-ref", "type", "name", "data", "hashes"],
        "properties": {
          "bom-ref": {
            "type": "string",
            "description": "Unique reference for this component"
          },
          "type": {
            "type": "string",
            "const": "data"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["configuration", "dataset", "definition", "source-code", "other"],
                  "description": "Type of data being described"
                },
                "name": {
                  "type": "string",
                  "description": "Name of the data element"
                }
              }
            }
          },
          "hashes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["alg", "content"],
              "properties": {
                "alg": {
                  "type": "string",
                  "enum": ["SHA-256", "SHA-384", "SHA-512", "SHA3-256", "SHA3-512", "BLAKE3"]
                },
                "content": {
                  "type": "string",
                  "pattern": "^[a-f0-9]+$"
                }
              }
            }
          },
          "properties": {
            "type": "array",
            "description": "Metadata about the data blob",
            "items": {
              "type": "object",
              "required": ["name", "value"],
              "properties": {
                "name": { "type": "string" },
                "value": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "signature": {
      "type": "object",
      "required": ["algorithm", "value"],
      "properties": {
        "algorithm": {
          "type": "string",
          "enum": ["ES256", "ES384", "ES512"]
        },
        "certificatePath": {
          "type": "array",
          "items": { "type": "string" }
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}
